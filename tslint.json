{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": ["tslint-config-airbnb", "tslint-config-prettier"],
  "rules": {
    "import-name": false,
    "no-increment-decrement": false,
    "no-var-keyword": false,
    "prefer-const": false,
    "prettier": [
      true,
      {
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "printWidth": 100,
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false
      }
    ]
  }
}
